<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/favourite_imageView"
        android:layout_width="90dp"
        android:layout_height="66dp"
        app:sriv_left_bottom_corner_radius="10dp"
        app:sriv_left_top_corner_radius="10dp"
        app:sriv_right_bottom_corner_radius="10dp"
        app:sriv_right_top_corner_radius="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/heart" />


<TextView
    android:id="@+id/ad"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@+id/favourite_imageView"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:text="Neolit Şadlıq Sarayı"
    android:textSize="18dp"
    android:textColor="@color/design_default_color_on_secondary"/>

    <TextView
        android:id="@+id/aznn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ad"
        android:layout_toEndOf="@+id/favourite_imageView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="70 AZN"
        android:textSize="14dp"
        android:textColor="@color/design_default_color_on_secondary"
        />
 <TextView
     android:id="@+id/location"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/aznn"
     android:layout_toEndOf="@+id/favourite_imageView"
     android:layout_marginStart="10dp"
     android:layout_marginTop="3dp"
     android:text="Atatürk Prospekti"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location_on_black_24dp"
        android:layout_below="@+id/aznn"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@+id/location"/>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
       android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_search"
        android:text="Sİl"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>