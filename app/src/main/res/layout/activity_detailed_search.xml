<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailedSearch">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Şadlıq Palaces"
            android:textColor="@color/divider"
            android:textSize="25dp"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/detailed_menyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:text="Menyunu daxil edin"
        android:textColor="@color/design_default_color_on_secondary"/>

    <EditText
        android:id="@+id/menu_text"
        android:layout_below="@id/detailed_menyu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

    </EditText>


    <TextView
        android:id="@+id/detailed_tedbir_novu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_text"
       android:layout_marginTop="20dp"
        android:text="Tədbir növünü daxil edin"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:textColor="@color/design_default_color_on_secondary"/>

    <Spinner
        android:id="@+id/event_type_spinner"
        android:background="@drawable/spinner_style2"
        android:layout_below="@+id/detailed_tedbir_novu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        >

    </Spinner>
    <TextView
        android:id="@+id/detailed_guest_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_type_spinner"
        android:text="Qonaq sayını daxil edin"
        android:layout_marginStart="20dp"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/design_default_color_on_secondary"/>


    <EditText
        android:id="@+id/guest_count_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/detailed_guest_count"/>



    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_search"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="Axtar"
        android:textColor="@color/divider"
        android:layout_below="@+id/guest_count_text"
        android:layout_marginTop="40dp"
        />


</RelativeLayout>