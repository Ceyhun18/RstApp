<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:pivotX="50%"
    android:pivotY="50%"
    android:fromDegrees="0"
    android:duration="50"
    android:toDegrees="2160">

    <shape
        android:shape="ring"
        android:innerRadiusRatio="3.4"
        android:thicknessRatio="18"
        android:useLevel="false">

        <size
            android:width="60dip"
            android:height="60dip" />

        <gradient
            android:type="sweep"
            android:useLevel="false"
            android:startColor="#EE145E"
            android:endColor="#F0E6E6"
            android:angle="0"/>

    </shape>

</rotate>